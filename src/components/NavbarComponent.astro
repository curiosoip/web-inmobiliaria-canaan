---
import { Image } from "astro:assets";
import logoCanaan from "../assets/logo.svg";

---

<nav
    class="bg-slate-800 border-b border-amber-500 sticky w-full z-80 top-0 start-0"
>
    <div class="flex flex-wrap items-center justify-between mx-auto">
        <div
            class="px-4 lg:px-6 py-3 md:py-3 flex items-center justify-center md:justify-start"
        >
            <div class="flex items-center space-x-3">
                <Image
                    src={logoCanaan}
                    alt="Canaan Inmobiliaria"
                    class="w-20"
                />
                   

            </div>
        </div>
        <div
            class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse px-4"
        >
            <button
                type="button"
                class="text-amber-300 cursor-pointer border-2 border-amber-300 hover:text-amber-400 font-medium rounded-lg text-sm px-4 py-2 text-center"
                >Ingresar</button
            >
            <button
                data-collapse-toggle="navbar-sticky"
                type="button"
                class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-200 rounded-lg md:hidden hover:text-gray-300 focus:outline-none"
                aria-controls="navbar-sticky"
                aria-expanded="false"
            >
                <span class="sr-only">Open main menu</span>
                <svg
                    class="w-5 h-5"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 17 14"
                >
                    <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M1 1h15M1 7h15M1 13h15"></path>
                </svg>
            </button>
        </div>
        <div
            class="items-center justify-between hidden bg-slate-900 px-4 py-3 rounded-md w-full md:flex md:w-auto md:order-1"
            id="navbar-sticky"
        >
            <ul
                class="flex flex-col p-4 md:p-0 mt-2 gap-3 font-medium md:space-x-12 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0"
            >
                <li>
                    <a
                        href="#inicio"
                        class="text-white hover:text-amber-300 transition-all duration-300 font-semibold text-sm tracking-wider uppercase"
                    >
                        INICIO
                    </a>
                </li>
                <li>
                    <a
                        href="#servicios"
                        class="text-white hover:text-amber-300 transition-all duration-300 font-semibold text-sm tracking-wider uppercase"
                    >
                        SERVICIOS
                    </a>
                </li>
                <li>
                    <a
                        href="#nosotros"
                        class="text-white hover:text-amber-300 transition-all duration-300 font-semibold text-sm tracking-wider uppercase"
                    >
                        NOSOTROS
                    </a>
                </li>
                <li>
                    <a
                        href="#contacto"
                        class="text-white hover:text-amber-300 transition-all duration-300 font-semibold text-sm tracking-wider uppercase"
                    >
                        CONTACTO
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

