<section id="servicios" class="py-16 sm:py-20 lg:py-28 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 sm:mb-16 lg:mb-20">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-slate-800 mb-4 sm:mb-6 tracking-tight">
        SERVICIOS
      </h2>
      <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto px-4">
        Ofrecemos soluciones integrales en construcción, bienes raíces y tecnología avanzada
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {services.map((service,index) => (
        <div class="group">
          <div class="flex flex-col lg:flex-row items-start gap-4 justify-center">
            <article class="flex w-full flex-col justify-start items-center gap-3">
              <div class={`relative w-full lg:w-80 h-48 sm:h-56 lg:h-64 border-2 border-${service.borderStyle} rounded-xl group-hover:shadow-xl`}>
				  <div class="absolute inset-0 rounded-xl overflow-hidden">
					<video
					autoplay
					muted
					loop
					playsinline
					poster={service.poster}
					preload="auto"
					class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-500"
					>
					<source src={service.video} type="video/mp4" />
					</video>
					<div class={`absolute inset-0 ${service.btnColor} opacity-30`}></div>
				</div>

				<div class={`absolute  inset-0 flex flex-col justify-center items-center  gap-2 pointer-events-none z-50 transition-transform duration-500 ease-in-out transform group-hover:-translate-y-5 group-hover:flex-row ${service.hoverColor} group-hover:px-4 group-hover:py-1 group-hover:rounded-full`}>
					<p class={`text-white   text-6xl font-bold group-hover:text-2xl transition-transform duration-500 ease-in-out  `}>
						{service.id === 1 ? "10+" : service.id === 2 ? "50+" : service.id === 3 ? "120+" : "5+"}
					</p>
					<p class="text-white text-sm font-bold group-hover:text-xs transition-transform duration-500 ease-in-out">
						{service.id === 1 ? "Urbanizaciones" : service.id === 2 ? "Consultorías" : service.id === 3 ? "Importaciones" : "GPS de precisión"}
					</p>
				</div>

                <div class="absolute bottom-4 flex flex-col gap-1 left-4 right-4">
                  {service.details.map((detail, i) => (
                    <div
                      class="bg-white/90 backdrop-blur-sm flex justify-start items-center gap-2 rounded-lg px-3 py-1 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class={service.iconColor} viewBox="0 0 32 32">
                        <path
                          fill="currentColor"
                          d="M11.166 23.963L22.36 17.5c1.43-.824 1.43-2.175 0-3L11.165 8.037c-1.43-.826-2.598-.15-2.598 1.5v12.926c0 1.65 1.17 2.326 2.598 1.5z"
                        />
                      </svg>
                      <p class="text-sm font-medium text-slate-700">{detail}</p>
                    </div>
                  ))}
				  
                </div>
              </div>
              <a 
				href={service.url}
				class={`flex w-full cursor-pointer justify-between items-center gap-2 text-white px-6 sm:px-8 py-3 sm:py-4 rounded-xl font-bold text-base sm:text-lg tracking-wide shadow-lg ${service.btnColor}`}
				>
				<span  set:html={service.iconLeft}></span>

				<span class="flex justify-center items-center text-center">{service.title}</span>

				<span  set:html={service.iconRight}></span>
				</a>


