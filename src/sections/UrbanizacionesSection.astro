---
import CardComponent from "../components/CardComponent.astro"

import achumani from "../assets/imgs/achumani.jpg";
import irpavi from "../assets/imgs/irpavi.jpg";
import calacoto from "../assets/imgs/calacoto.jpg";

const {title}=Astro.params

---
<section class="relative w-full flex justify-center pt-10 px-4 pb-14 
    bg-gradient-to-t from-green-100/30 via-emerald-300/30 to-emerald-400/30 overflow-hidden">

  <!-- Rejilla decorativa (arriba derecha) -->
  <div class="absolute top-0 right-0 w-64 h-64 opacity-20">
    <div class="w-full h-full bg-[linear-gradient(to_right,#ffffff20_1px,transparent_1px),linear-gradient(to_bottom,#ffffff20_1px,transparent_1px)] bg-[size:20px_20px]"></div>
  </div>

  <!-- Rejilla decorativa (abajo izquierda) -->
  <div class="absolute bottom-0 left-0 w-48 h-48 opacity-10">
    <div class="w-full h-full bg-[linear-gradient(to_right,#ffffff30_1px,transparent_1px),linear-gradient(to_bottom,#ffffff30_1px,transparent_1px)] bg-[size:16px_16px]"></div>
  </div>
  <div class="flex flex-col lg:flex-row w-full max-w-6xl justify-between gap-8 items-center">
    <CardComponent 
      img={achumani.src}
      ciudad={title}
      titleUrbanizacion="Achumani" 
      descripcion="Zona residencial tranquila, con vistas panorámicas de la ciudad y fácil acceso a servicios. Ideal para viviendas familiares." 
    />
    <CardComponent 
      img={irpavi.src}
      ciudad={title}
      titleUrbanizacion="Irpavi" 
      descripcion="Urbanización consolidada, segura y bien conectada, con acceso rápido a transporte y comercios cercanos." 
    />
    <CardComponent 
      img={calacoto.src}
      ciudad={title}
      titleUrbanizacion="Calacoto" 
      descripcion="Área residencial de alto nivel, con infraestructura moderna, espacios verdes y ambiente seguro para vivir." 
    />
  </div>
</section>
