---
import "../styles/global.css";
import { Image } from "astro:assets";
import logoCanaan from "../assets/logo.svg";
import logoCanaanWhite from "../assets/logo_white.svg";
import sobrenosotros00 from "../assets/imgs/00.jpg";
import MapComponent from "../components/MapComponent.vue"

import imglotes from "../assets/imgs/12.jpg"
import imgconsultoria from "../assets/imgs/15.jpg"
import imgimportacion from "../assets/imgs/16.jpg"
import imgredcors from "../assets/imgs/17.jpg"
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Canaan Inmobiliaria</title>
	</head>
	<body class="min-h-screen bg-white">
		<nav class="bg-slate-800 border-b border-amber-500 sticky w-full z-80 top-0 start-0">
			<div
				class=" flex flex-wrap items-center justify-between mx-auto "
			>
				<div
					class=" px-4 lg:px-6 py-3 md:py-3 flex items-center justify-center md:justify-start"
				>
					<div class="flex items-center space-x-3">
						
						<Image src={logoCanaan} alt="Canaan Inmobiliaria" 
							class="w-20 "/>
					</div>
				</div>
				<div
					class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse px-4"
				>
					<button
						type="button"
						class="text-amber-300 cursor-pointer border-2 border-amber-300 hover:text-amber-400   font-medium rounded-lg text-sm px-4 py-2 text-center"
						>Ingresar</button
					>
					<button
						data-collapse-toggle="navbar-sticky"
						type="button"
						class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-200 rounded-lg md:hidden hover:text-gray-300 focus:outline-none "
						aria-controls="navbar-sticky"
						aria-expanded="false"
					>
						<span class="sr-only">Open main menu</span>
						<svg
							class="w-5 h-5"
							aria-hidden="true"
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 17 14"
						>
							<path
								stroke="currentColor"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M1 1h15M1 7h15M1 13h15"></path>
						</svg>
					</button>
				</div>
				<div
					class="items-center justify-between hidden bg-slate-900 px-4 py-3 rounded-md w-full md:flex md:w-auto md:order-1"
					id="navbar-sticky"
				>
					<ul
						class="flex flex-col p-4 md:p-0 mt-2 gap-3 font-medium  md:space-x-12 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 "
					>
						<li>
							<a
								href="#inicio"
								class="text-amber-400 hover:text-amber-300 transition-all duration-300 font-semibold text-sm tracking-wider uppercase"
							>
								INICIO
							</a>
						</li>
						<li>
							<a
								href="#servicios"
								class="text-white hover:text-amber-300 transition-all duration-300 font-semibold text-sm tracking-wider uppercase"
							>
								SERVICIOS
							</a>
						</li>
						<li>
							<a
								href="#nosotros"
								class="text-white hover:text-amber-300 transition-all duration-300 font-semibold text-sm tracking-wider uppercase"
							>
								NOSOTROS
							</a>
						</li>
						<li>
							<a
								href="#contacto"
								class="text-white hover:text-amber-300 transition-all duration-300 font-semibold text-sm tracking-wider uppercase"
							>
								CONTACTO
							</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		
	</body>

	<section id="inicio" class="relative h-screen overflow-hidden">
		<div class="absolute inset-0">
		<div class="relative w-full h-full">

			<video 
			autoplay 
			muted 
			loop 
			playsinline
			id="hero-video"
			transition:persist
			class="object-cover w-full h-full transition-all duration-1000"
			>
			<source src="src/assets/bgvid.mp4" type="video/mp4" />
			Tu navegador no soporta video en HTML5.
			</video>

			<div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-black/60"></div>
		</div>
		</div>



		<div class="relative z-10 flex items-center justify-center h-full">
			<div
				class="text-center text-white px-4 sm:px-6 lg:px-8 max-w-8xl mx-auto"
			>
				<div class="mb-4 sm:mb-6">
					<span
						class="inline-block  backdrop-blur-sm border border-amber-400/30 text-amber-100 px-4 sm:px-6 py-2 rounded-full text-xs sm:text-sm font-semibold tracking-wide"
						id="slide-subtitle"
					>
						✨ CON LAS MEJORES CUOTAS DEL MERCADO
					</span>
				</div>

				<h1
					class=" font-bold mb-6 sm:mb-8 "
				>
					<span class="block text-3xl lg:text-6xl  text-white "
						>LÍDERES EN CALIDAD DE</span
					>
					<span class="block text-3xl lg:text-6xl  text-amber-400"
						>CONSTRUCCIÓN</span
					>
				</h1>

				<div
					class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center mb-12 sm:mb-16 px-4"
				>
					<a
						href="#"
						class="w-full gap-2 sm:w-auto bg-amber-500  hover:text-slate-950 text-slate-800 font-bold px-8 sm:px-12 py-2 text-base sm:text-lg rounded-lg  transition-all duration-300 group flex items-center justify-center"
					>
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="m19.6 21l-6.3-6.3q-.75.6-1.725.95T9.5 16q-2.725 0-4.612-1.888T3 9.5t1.888-4.612T9.5 3t4.613 1.888T16 9.5q0 1.1-.35 2.075T14.7 13.3l6.3 6.3zM9.5 14q1.875 0 3.188-1.312T14 9.5t-1.312-3.187T9.5 5T6.313 6.313T5 9.5t1.313 3.188T9.5 14"/></svg>
						Ver Lotes Disponibles
						
					</a>

					<a
						href="#"
						class="w-full sm:w-auto gap-2 bg-white text-slate-700  hover:text-slate-950 font-bold px-8 sm:px-12 py-2 text-base sm:text-lg rounded-lg transition-all duration-300 group flex items-center justify-center"
					>
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M7 2h10a2 2 0 0 1 2 2v16a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2m0 2v4h10V4zm0 6v2h2v-2zm4 0v2h2v-2zm4 0v2h2v-2zm-8 4v2h2v-2zm4 0v2h2v-2zm4 0v2h2v-2zm-8 4v2h2v-2zm4 0v2h2v-2zm4 0v2h2v-2z"/></svg>
						Calcular Financiamiento
					</a>
				</div>
			</div>
		</div>
	</section>

	<section id="servicios" class="py-16 sm:py-20 lg:py-28 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-12 sm:mb-16 lg:mb-20">
				<h2
					class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-slate-800 mb-4 sm:mb-6 tracking-tight"
				>
					SERVICIOS
				</h2>
				<p
					class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto px-4"
				>
					Ofrecemos soluciones integrales en construcción, bienes
					raíces y tecnología avanzada
				</p>
			</div>

			<div
				class="grid grid-cols-1 lg:grid-cols-2 gap-8"
			>
				<!-- Venta de Lotes -->
				<div class="group">
					<div
						class="flex flex-col lg:flex-row items-start gap-4 justify-center "
					>
						<article class="flex w-full flex-col justify-start items-center gap-3">
								<div
									class="relative w-full lg:w-80 h-48 sm:h-56 lg:h-64 bg-gradient-to-br from-amber-50 to-amber-100 border-2 border-amber-200 rounded-xl overflow-hidden group-hover:border-amber-400 transition-all duration-500 group-hover:shadow-xl group-hover:shadow-amber-500/20"
								>
									<div
										class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
									>
									</div>
									<Image src={imglotes} alt="Venta de Lotes" 
									class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-500"/>
									
									<div class="absolute bottom-4 flex flex-col gap-1 left-4 right-4">
										<div
											class="bg-white/90 backdrop-blur-sm flex justify-start items-center gap-2   rounded-lg px-3 py-1  transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300"
										>
											<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="text-amber-500" viewBox="0 0 32 32"><path fill="currentColor" d="M11.166 23.963L22.36 17.5c1.43-.824 1.43-2.175 0-3L11.165 8.037c-1.43-.826-2.598-.15-2.598 1.5v12.926c0 1.65 1.17 2.326 2.598 1.5z"/></svg>
											<p
												class="text-sm font-medium text-slate-700"
											>
												Lotes residenciales premium
											</p>
										</div>
										<div
											class="bg-white/90 backdrop-blur-sm flex justify-start items-center gap-2   rounded-lg px-3 py-1  transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300"
										>
											<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="text-amber-500" viewBox="0 0 32 32"><path fill="currentColor" d="M11.166 23.963L22.36 17.5c1.43-.824 1.43-2.175 0-3L11.165 8.037c-1.43-.826-2.598-.15-2.598 1.5v12.926c0 1.65 1.17 2.326 2.598 1.5z"/></svg>
											<p
												class="text-sm font-medium text-slate-700"
											>
												Créditos accesibles
											</p>
										</div>
									</div>
								</div>
								<div
											class="bg-amber-500  text-white px-6 sm:px-8 py-3 sm:py-4 rounded-xl font-bold text-base sm:text-lg tracking-wide shadow-lg"
										>
											VENTA DE LOTES
										</div>
								<p
									class="text-gray-600 max-w-xs text-sm flex w-full justify-start "
								>
									Terrenos residenciales en las mejores
									ubicaciones de Bolivia con servicios básicos
									garantizados
								</p>
								
						</article>	
					

						
					</div>
				</div>

				<!-- Consultoría Constructiva -->
				<div class="group">
					<div
						class="flex flex-col lg:flex-row items-center gap-6 sm:gap-8"
					>
						<article class="flex w-full flex-col justify-start items-center gap-3">
							<div
							class="relative w-full lg:w-80 h-48 sm:h-56 lg:h-64 bg-gradient-to-br from-teal-50 to-teal-100 border-2 border-teal-200 rounded-xl overflow-hidden group-hover:border-teal-400 transition-all duration-500 group-hover:shadow-xl group-hover:shadow-teal-500/20"
						>
							<div
								class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
							>
							</div>
							<Image src={imgconsultoria} alt="Consultoría Constructiva" 
									class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-500"/>
									
	
							<div class="absolute bottom-4 flex flex-col gap-1 left-4 right-4">
								<div
									class="bg-white/90 flex gap-2 justify-start items-center backdrop-blur-sm rounded-lg px-3 py-1  transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300"
								>
									<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="text-teal-500" viewBox="0 0 32 32"><path fill="currentColor" d="M11.166 23.963L22.36 17.5c1.43-.824 1.43-2.175 0-3L11.165 8.037c-1.43-.826-2.598-.15-2.598 1.5v12.926c0 1.65 1.17 2.326 2.598 1.5z"/></svg>

									<p
										class="text-sm font-medium text-slate-700"
									>
										Ingeniería civil y arquitectura
									</p>
								</div>
								<div
									class="bg-white/90 flex gap-2 justify-start items-center backdrop-blur-sm rounded-lg px-3 py-1  transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300"
								>
									<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="text-teal-500" viewBox="0 0 32 32"><path fill="currentColor" d="M11.166 23.963L22.36 17.5c1.43-.824 1.43-2.175 0-3L11.165 8.037c-1.43-.826-2.598-.15-2.598 1.5v12.926c0 1.65 1.17 2.326 2.598 1.5z"/></svg>

									<p
										class="text-sm font-medium text-slate-700"
									>
										Topografía y geodesia geométrica
									</p>
								</div>
								<div
									class="bg-white/90 flex gap-2 justify-start items-center backdrop-blur-sm rounded-lg px-3 py-1 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300"
								>
									<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="text-teal-500" viewBox="0 0 32 32"><path fill="currentColor" d="M11.166 23.963L22.36 17.5c1.43-.824 1.43-2.175 0-3L11.165 8.037c-1.43-.826-2.598-.15-2.598 1.5v12.926c0 1.65 1.17 2.326 2.598 1.5z"/></svg>

									<p
										class="text-sm font-medium text-slate-700"
									>
										Gestión y supervisión de construcción
									</p>
								</div>
								
							</div>
						</div>
						<div
									class="bg-gradient-to-r from-teal-500 to-teal-600 text-white px-6 sm:px-8 py-3 sm:py-4 rounded-xl font-bold text-base sm:text-lg tracking-wide shadow-lg"
								>
									CONSULTORÍA CONSTRUCTIVA
								</div>
								<p
									class="text-gray-600 max-w-xs text-sm flex w-full justify-start "
								>
									  Asesoramiento especializado en proyectos de construcción, planificación y optimización de recursos para obras seguras y eficientes en Bolivia

								</p>

						</article>
						

						
					</div>
				</div>

				<!-- Importaciones -->
				<div class="group">
					<div
						class="flex flex-col lg:flex-row items-center gap-6 sm:gap-8"
					>
					<article class="flex w-full flex-col justify-start items-center gap-3">
						<div
							class="relative w-full lg:w-80 h-48 sm:h-56 lg:h-64 bg-gradient-to-br from-slate-50 to-slate-100 border-2 border-slate-200 rounded-xl overflow-hidden group-hover:border-slate-400 transition-all duration-500 group-hover:shadow-xl group-hover:shadow-slate-500/20"
						>
							<div
								class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
							>
							</div>
							<Image src={imgimportacion} alt="Importaciones" 
									class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-500"/>
									
							
							<div class="absolute flex flex-col gap-1 bottom-4 left-4 right-4">
								<div
									class="bg-white/90 flex gap-2 justify-start items-center backdrop-blur-sm rounded-lg px-3 py-1 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300"
								>
									<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="text-slate-500" viewBox="0 0 32 32"><path fill="currentColor" d="M11.166 23.963L22.36 17.5c1.43-.824 1.43-2.175 0-3L11.165 8.037c-1.43-.826-2.598-.15-2.598 1.5v12.926c0 1.65 1.17 2.326 2.598 1.5z"/></svg>

									<p
										class="text-sm font-medium text-slate-700"
									>
										Equipos y tecnología especializada
									</p>
								</div>
							</div>
						</div>
						<div
									class="bg-slate-500 text-white px-6 sm:px-8 py-3 sm:py-4 rounded-xl font-bold text-base sm:text-lg tracking-wide shadow-lg"
								>
									IMPORTACIONES
								</div>
								<p
									class="text-gray-600 max-w-xs text-sm sm:text-base"
								>
									Equipos especializados y tecnología de
									vanguardia para proyectos de construcción e
									infraestructura
								</p>

					</article>
						

					</div>
				</div>

				<!-- Red CORS -->
				<div class="group">
					<div
						class="flex flex-col lg:flex-row items-center gap-6 sm:gap-8"
					>
						<article class="flex w-full flex-col justify-start items-center gap-3">
							<div
							class="relative w-full lg:w-80 h-48 sm:h-56 lg:h-64 bg-gradient-to-br from-blue-50 to-blue-100 border-2 border-blue-200 rounded-xl overflow-hidden group-hover:border-blue-400 transition-all duration-500 group-hover:shadow-xl group-hover:shadow-blue-500/20"
						>
							<div
								class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
							>
							</div>
							<Image src={imgredcors} alt="Red CORS" 
									class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-500"/>
									
						
							<div class="absolute flex flex-col gap-1 bottom-4 left-4 right-4">
								<div
									class="bg-white/90 flex gap-2 justify-start items-center backdrop-blur-sm rounded-lg px-3 py-1 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300"
								>
									<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="text-blue-500" viewBox="0 0 32 32"><path fill="currentColor" d="M11.166 23.963L22.36 17.5c1.43-.824 1.43-2.175 0-3L11.165 8.037c-1.43-.826-2.598-.15-2.598 1.5v12.926c0 1.65 1.17 2.326 2.598 1.5z"/></svg>

									<p
										class="text-sm font-medium text-slate-700"
									>
										Red CORS - NTRIP
									</p>
								</div>
								<div
									class="bg-white/90 flex gap-2 justify-start items-center backdrop-blur-sm rounded-lg px-3 py-1 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300"
								>
									<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="text-blue-500" viewBox="0 0 32 32"><path fill="currentColor" d="M11.166 23.963L22.36 17.5c1.43-.824 1.43-2.175 0-3L11.165 8.037c-1.43-.826-2.598-.15-2.598 1.5v12.926c0 1.65 1.17 2.326 2.598 1.5z"/></svg>

									<p
										class="text-sm font-medium text-slate-700"
									>
										Correcciones GPS en tiempo real
									</p>
								</div>
								<div
									class="bg-white/90 flex gap-2 justify-start items-center backdrop-blur-sm rounded-lg px-3 py-1 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300"
								>
									<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="text-blue-500" viewBox="0 0 32 32"><path fill="currentColor" d="M11.166 23.963L22.36 17.5c1.43-.824 1.43-2.175 0-3L11.165 8.037c-1.43-.826-2.598-.15-2.598 1.5v12.926c0 1.65 1.17 2.326 2.598 1.5z"/></svg>

									<p
										class="text-sm font-medium text-slate-700"
									>
										Precisión centimétrica garantizada
									</p>
								</div>
							</div>
						</div>
						<div
									class="bg-gradient-to-r from-blue-500 to-blue-600 text-white px-6 sm:px-8 py-3 sm:py-4 rounded-xl font-bold text-base sm:text-lg tracking-wide shadow-lg"
								>
									RED CORS
								</div>
								<p
									class="text-gray-600 max-w-xs text-sm sm:text-base"
								>
									  Acceso a correcciones GPS en tiempo real para posicionamiento preciso y confiable en cualquier ubicación

								</p>

						</article>
						
						</div>
					
				</div>
			</div>

			<div class="text-center mt-16 sm:mt-20 bg-slate-500/20 py-10 px-10">
				<div class="text-center mb-5">
					<h2
						class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-slate-800 mb-4 sm:mb-6 tracking-tight"
					>
						RECIBE UN PRESUPUESTO
					</h2>
					<p
						class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto px-4"
					>
						Ofrecemos cuotas adaptadas a tu bolsillo
					</p>
				</div>
				<a
					href="#"
