		src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"
	></script>
	 <script>
        // Datos para las diapositivas
        const aboutSlides = [
            {
                id: "mision",
                title: "MISIÓN",
                icon: "📜",
                color: "teal",
                content: "Brindar soluciones integrales en bienes raíces, construcción, consultoría, importación y servicios tecnológicos, ofreciendo productos y proyectos de alta calidad que satisfagan las necesidades de nuestros clientes, impulsando el desarrollo sostenible y generando valor en cada etapa de nuestros servicios.",
            },
            {
                id: "vision",
                title: "VISIÓN",
                icon: "🌎",
                color: "amber",
                content: "Ser una empresa líder y referente a nivel nacional e internacional, reconocida por la innovación, la excelencia en la ejecución y la confianza que brindamos en los sectores inmobiliario, de construcción, comercio e infraestructura tecnológica, contribuyendo al crecimiento económico y social de las comunidades donde operamos.",
            },
            {
                id: "valores",
                title: "VALORES",
                icon: "💡",
                color: "teal",
                content: "",
                values: ["Integridad", "Calidad", "Innovación", "Compromiso", "Sostenibilidad", "Confianza", "Adaptabilidad"],
            },
        ];

        // Estado del slider
        let currentAboutSlide = 0;
        let aboutSlideInterval;

        // Inicializar el slider cuando el DOM esté cargado
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar iconos de Lucide
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
            
            // Inicializar slides
            initAboutSlides();
            
            // Configurar event listeners
            setupEventListeners();
            
            // Iniciar transición automática de slides
            startAboutSlideInterval();
        });

        // Inicializar slides
        function initAboutSlides() {
            const aboutContainer = document.getElementById('about-slides-container');
            const indicatorsContainer = document.getElementById('about-slide-indicators');
            
            aboutContainer.innerHTML = '';
            indicatorsContainer.innerHTML = '';
            
            aboutSlides.forEach((slide, index) => {
                // Crear contenido del slide
                const slideDiv = document.createElement('div');
                slideDiv.className = `transition-all duration-700 ease-in-out ${index === currentAboutSlide ? 'opacity-100 transform translate-x-0 relative' : 'opacity-0 transform translate-x-8 absolute inset-0 pointer-events-none'}`;
                
                slideDiv.innerHTML = `
                    <div class="flex flex-col sm:flex-row items-center sm:items-start space-y-4 sm:space-y-0 sm:space-x-6 mb-6 sm:mb-8">
                        <div class="text-3xl sm:text-4xl lg:text-5xl p-3 sm:p-4 rounded-2xl shadow-sm ${slide.color === "teal" ? "bg-gradient-to-br from-teal-50 to-teal-100 border border-teal-200" : "bg-gradient-to-br from-amber-50 to-amber-100 border border-amber-200"}">
                            ${slide.icon}
                        </div>
                        <h3 class="text-2xl sm:text-3xl lg:text-4xl font-bold tracking-tight text-center sm:text-left ${slide.color === "teal" ? "text-teal-700" : "text-amber-700"}">
                            ${slide.title}
                        </h3>
                    </div>
                    <p class="text-gray-600 text-base sm:text-lg lg:text-xl leading-relaxed mb-6 sm:mb-8 font-light text-left">
                        ${slide.content}
                    </p>
                    ${slide.values ? `
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 sm:gap-3">
                            ${slide.values.map(value => `
                                <div class="flex items-center space-x-3 sm:space-x-4 group p-2 sm:p-3 rounded-xl hover:bg-teal-50 transition-all duration-300">
                                    <div class="w-2 h-2 sm:w-3 sm:h-3 bg-gradient-to-r from-teal-400 to-teal-600 rounded-full group-hover:scale-125 transition-transform duration-300 shadow-lg flex-shrink-0"></div>
                                    <span class="text-gray-700 font-medium group-hover:text-teal-700 transition-colors duration-300 text-sm sm:text-base">
                                        ${value}
                                    </span>
                                </div>
                            `).join('')}
                        </div>
                    ` : ''}
                `;
                
                aboutContainer.appendChild(slideDiv);
                
                // Crear indicador
                const indicatorButton = document.createElement('button');
                indicatorButton.className = `relative transition-all duration-300 group ${index === currentAboutSlide ? 'w-12 sm:w-16 h-4 sm:h-5' : 'w-4 sm:w-5 h-4 sm:h-5 hover:w-6 sm:hover:w-8'}`;
                indicatorButton.addEventListener('click', () => setCurrentAboutSlide(index));
                
                indicatorButton.innerHTML = `
                    <div class="w-full h-full rounded-full transition-all duration-300 ${index === currentAboutSlide ? 
                        (slide.color === "teal" ? "bg-gradient-to-r from-teal-400 to-teal-600 shadow-xl shadow-teal-500/40" : "bg-amber-500 shadow-xl shadow-amber-500/40") : 
                        "bg-gray-300 hover:bg-gray-400 group-hover:shadow-lg"}"></div>
                    <div class="absolute -bottom-6 sm:-bottom-8 left-1/2 transform -translate-x-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <span class="text-xs font-medium text-gray-600 whitespace-nowrap bg-white px-2 py-1 rounded-md shadow-lg">${slide.title}</span>
                    </div>
                `;
                
                indicatorsContainer.appendChild(indicatorButton);
            });
            
            updateAboutSlideCounter();
        }

        // Configurar event listeners
        function setupEventListeners() {
            // Navegación de slides
            document.getElementById('prev-about-slide').addEventListener('click', prevAboutSlide);
            document.getElementById('next-about-slide').addEventListener('click', nextAboutSlide);
        }

        // Funciones de slides
        function setCurrentAboutSlide(index) {
            currentAboutSlide = index;
            updateAboutSlideContent();
            resetAboutSlideInterval();
        }

        function nextAboutSlide() {
            setCurrentAboutSlide((currentAboutSlide + 1) % aboutSlides.length);
        }

        function prevAboutSlide() {
            setCurrentAboutSlide((currentAboutSlide - 1 + aboutSlides.length) % aboutSlides.length);
        }

        function updateAboutSlideContent() {
            const slides = document.querySelectorAll('#about-slides-container > div');
            const indicators = document.querySelectorAll('#about-slide-indicators button');
            
            slides.forEach((slide, index) => {
                slide.className = `transition-all duration-700 ease-in-out ${index === currentAboutSlide ? 'opacity-100 transform translate-x-0 relative' : 'opacity-0 transform translate-x-8 absolute inset-0 pointer-events-none'}`;
            });
            
            indicators.forEach((indicator, index) => {
                const slide = aboutSlides[index];
                const innerDiv = indicator.querySelector('div:first-child');
                innerDiv.className = `w-full h-full rounded-full transition-all duration-300 ${index === currentAboutSlide ? 
                    (slide.color === "teal" ? "bg-gradient-to-r from-teal-400 to-teal-600 shadow-xl shadow-teal-500/40" : "bg-amber-500 shadow-xl shadow-amber-500/40") : 
                    "bg-gray-300 hover:bg-gray-400 group-hover:shadow-lg"}`;
                
                indicator.className = `relative transition-all duration-300 group ${index === currentAboutSlide ? 'w-12 sm:w-16 h-4 sm:h-5' : 'w-4 sm:w-5 h-4 sm:h-5 hover:w-6 sm:hover:w-8'}`;
            });
            
            // Actualizar barra de progreso
            const progressBar = document.getElementById('about-progress-bar');
            const progressPercentage = ((currentAboutSlide + 1) / aboutSlides.length) * 100;
            progressBar.style.width = `${progressPercentage}%`;
            
            // Actualizar color según el slide actual
            const currentSlideData = aboutSlides[currentAboutSlide];
            if (currentSlideData.color === 'teal') {
                progressBar.className = 'h-full rounded-full transition-all duration-500 ease-out shadow-lg bg-gradient-to-r from-teal-400 via-teal-500 to-teal-600';
            } else {
                progressBar.className = 'h-full rounded-full transition-all duration-500 ease-out shadow-lg bg-gradient-to-r from-amber-400 via-amber-500 to-amber-600';
            }
            
            updateAboutSlideCounter();
        }

        function updateAboutSlideCounter() {
            document.getElementById('about-slide-counter').textContent = `${currentAboutSlide + 1} / ${aboutSlides.length}`;
            document.getElementById('about-slide-title').textContent = aboutSlides[currentAboutSlide].title;
        }

        function startAboutSlideInterval() {
            aboutSlideInterval = setInterval(() => {
                nextAboutSlide();
            }, 8000);
        }

        function resetAboutSlideInterval() {
            clearInterval(aboutSlideInterval);
            startAboutSlideInterval();
        }
    </script>
